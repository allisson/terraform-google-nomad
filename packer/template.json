{
    "variables": {
        "project": "{{env `GOOGLE_PROJECT`}}",
        "account_file": "{{env `GOOGLE_APPLICATION_CREDENTIALS`}}",
        "zone": "{{env `GOOGLE_ZONE`}}",
        "bastion_disk_size_gb": "10",
        "server_disk_size_gb": "50",
        "client_disk_size_gb": "50"
    },
    "builders": [
        {
            "name": "bastion",
            "type": "googlecompute",
            "account_file": "{{user `account_file`}}",
            "project_id": "{{user `project`}}",
            "source_image": "ubuntu-1804-bionic-v20200317",
            "image_description": "nomad bastion image",
            "image_name": "nomad-bastion",
            "disk_size": "{{user `bastion_disk_size_gb`}}",
            "machine_type": "n1-standard-1",
            "state_timeout": "15m",
            "ssh_username": "ubuntu",
            "zone": "{{user `zone`}}"
        },
        {
            "name": "server",
            "type": "googlecompute",
            "account_file": "{{user `account_file`}}",
            "project_id": "{{user `project`}}",
            "source_image": "ubuntu-1804-bionic-v20200317",
            "image_description": "nomad server image",
            "image_name": "nomad-server",
            "disk_size": "{{user `server_disk_size_gb`}}",
            "machine_type": "n1-standard-1",
            "state_timeout": "15m",
            "ssh_username": "ubuntu",
            "zone": "{{user `zone`}}"
        },
        {
            "name": "client",
            "type": "googlecompute",
            "account_file": "{{user `account_file`}}",
            "project_id": "{{user `project`}}",
            "source_image": "ubuntu-1804-bionic-v20200317",
            "image_description": "nomad client image",
            "image_name": "nomad-client",
            "disk_size": "{{user `client_disk_size_gb`}}",
            "machine_type": "n1-standard-1",
            "state_timeout": "15m",
            "ssh_username": "ubuntu",
            "zone": "{{user `zone`}}"
        }
    ],
    "provisioners": [
        {
            "only": ["server"],
			"type": "file",
			"source": "configs/server.hcl",
			"destination": "/tmp/agent.hcl"
		},
        {
            "only": ["client"],
			"type": "file",
			"source": "configs/client.hcl",
			"destination": "/tmp/agent.hcl"
		},
		{
            "only": ["server", "client"],
			"type": "file",
			"source": "configs/nomad.service",
			"destination": "/tmp/nomad.service"
		},
		{
			"type": "shell",
			"scripts": [
				"scripts/install_required_packages.sh"
			]
		},
		{
            "only": ["client"],
			"type": "shell",
			"scripts": [
				"scripts/install_docker.sh"
			]
		},
		{
            "only": ["server", "client"],
			"type": "shell",
			"scripts": [
                "scripts/install_nomad.sh"
			]
		},
		{
			"type": "shell",
			"scripts": [
				"scripts/install_stack_driver_agent.sh"
			]
		},
		{
            "only": ["bastion"],
			"type": "shell",
			"inline": [
                "curl https://releases.hashicorp.com/nomad/0.10.4/nomad_0.10.4_linux_amd64.zip -o nomad.zip",
                "unzip nomad.zip",
                "sudo mv nomad /bin",
                "rm nomad.zip"
            ]
		}
    ]
}
